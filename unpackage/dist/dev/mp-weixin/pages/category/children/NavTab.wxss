
.nav-tab {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	min-width: 150rpx;
	min-height: 100%;
	font-size: 30rpx;
	text-align: center;
	background-color: #f2f2f2;
	border-right: 1px solid #f8f8f8;
}
.nav-tab-item {
	position: relative;
	height: 90rpx;
	line-height: 90rpx;
}
.select {
	background-color: #fff;
}
.message-hint {
	box-sizing: border-box;
	position: absolute;
	top: -100rpx;
	right: -150rpx;
	width: 210rpx;
	height: 210rpx;
	padding: 37rpx 20rpx;
	text-align: center;
	font-size: 25rpx;
	line-height: 30rpx;
	word-wrap: break-word;
	background: url(/static/message.png) no-repeat;
	background-size: 100%;
	-webkit-transition: all .6s;
	transition: all .6s;
	z-index: 99;
}

