<view class="message"><view class="content"><block wx:for="{{message}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item"><view class="avatar"><image class="image" src="{{item.avatar}}"></image></view><view class="text-info"><view class="username">{{item.user}}</view><view class="message-text">{{item.message}}</view><view class="timestamp">{{item.timestamp}}</view></view></view></block></view><view class="bottom"><textarea class="bottom-text" maxlength="30" placeholder="写点什么吧" data-event-opts="{{[['input',[['__set_model',['','text','$event',[]]]]]]}}" value="{{text}}" bindinput="__e"></textarea><button class="push" disabled="{{isDisabled}}" size="mini" data-event-opts="{{[['tap',[['sendPush',['$event']]]]]}}" bindtap="__e">发布</button><block wx:if="{{!isLogin}}"><view class="mask">请<text data-event-opts="{{[['tap',[['toLogin',['$event']]]]]}}" class="login" bindtap="__e">登录</text>后留言</view></block></view></view>