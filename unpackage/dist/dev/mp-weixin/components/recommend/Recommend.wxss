
.recommend{
	margin: 20rpx;
	padding: 15rpx;
	border: 1px solid #E9E9E9;
	border-radius: 20rpx;
	background-color: #fff;
}
.recommend ._h2 {
	font-weight: normal;
	font-size: 36rpx;
	text-align: center;
	margin: 10rpx 0;
	color: #333;
}
.recommend ._h2::after,
.recommend ._h2::before{
	display: inline-block;
	content: "";
	width: 150rpx;
	height: 3rpx;
	margin: 0 20rpx;
	background-color: #E9E9E9;
	vertical-align: middle;
}

