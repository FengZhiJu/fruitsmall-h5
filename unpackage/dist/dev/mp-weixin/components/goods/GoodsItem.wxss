
.goods-item{
	box-sizing: border-box;
	width: 48%;
	height: 330rpx;
	padding-bottom: 20rpx;
	margin: 10rpx 4rpx;
	text-align: center;
	border: 1px solid #eee;
}
goods-item {
	width: 48%;
}
.goods-item {
	width: 98%;
}
.image{
	width: 100%;
	height: 200rpx;
}
.image image {
	width: 100%;
	height: 100%;
}
.item-info {
	padding-top: 20rpx;
}
.name ._h3{
	margin: 5rpx;
	font-weight: normal;
	font-size: 32rpx;
}
.price {
	color: #ff6700;
	font-size: 25rpx;
}
.price .old-price {
	color: #999;
	margin-left: 5rpx;
	text-decoration: line-through;
}

